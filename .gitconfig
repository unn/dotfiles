[user]
	email = drupal@davidstoline.com
	name = David Stoline
  signingkey = 0D488FCE

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = 1

[merge]
  summary = true

[core]
  excludesfile = ~/dotfiles/git/gitignore
  pager = less -+$LESS -FRXS

[alias]
  st = status -sb
  w  = whatchanged
  d = diff --word-diff
  ci = commit -vS
  cia = commit -vaS
  co = checkout
  cp = cherry-pick
  l = log
  ll = log -p
  lt = log trunk..
  llt = log -p trunk..
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lm = log master..
  llm = log -p master..
  b = branch
  a = add
  wtf = !~/dotfiles/repos/git-tools/bin/git-wtf
  root = !pwd

[branch]
  autosetupmerge = true

[github]
  user = unn

[rerere]
  enabled = 1

[push]
  default = tracking

[url "ssh://git@git.drupal.org/project/"]
    insteadOf = "drupal:"
[credential]
  helper = osxkeychain
[help]
  autocorrect = 1
[diff]
  algorithm = patience
[url "git@github.com:"]
	insteadOf = https://github.com/
[commit]
	gpgsign = true
[pull]
	rebase = false
[init]
	defaultBranch = main
